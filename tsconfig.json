{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["stripe"],
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/components/Context.js", "app/components/Context.js", "app/stripe/checkout_sessions/index.js", "app/stripe/checkoutForm.jsx", "app/ui/carrito/StripeCheckoutForm.js", "app/StripePagos/page.jsx", "app/api/checkout/route.js"],
  "exclude": ["node_modules"]
}
